{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "strictNullChecks": false
  },
  "paths": {
    "~/*": ["lib/*"]
  },
  "include": [
    "lib/**/*"
  ],
  "exlcude": [
    "types/**/*"
  ],
  "lib": [
    "dom",
    "es7"
  ]
}
